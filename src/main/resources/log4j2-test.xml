<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout disableANSI="false" pattern="%highlight{%d{HH:mm:ss} [%t/%-5level] %logger{36}:\t %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=white, DEBUG=green bold, TRACE=blue}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root Level="error">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="com.github.mafelp.Main" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.configuration.YamlConfiguration" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.Listeners.MessageCreateListener" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.utils.Configuration" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!--Command Executors-->
        <Logger name="com.github.mafelp.commands.ConfigCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.commands.GameCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.commands.PersonCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.commands.RandomCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.commands.SkribblCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="com.github.mafelp.commands.UnwrapCommand" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
